<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<TextView
			android:layout_height="wrap_content"
			android:text="Sekretariat Haus DÃ¼rer"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:id="@+id/informationDuerer"
			android:layout_centerVertical="false"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="20dp"/>

		<ImageButton
			android:layout_height="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="40dp"
			android:src="@drawable/ic_action_call"
			android:layout_marginLeft="20dp"
			android:id="@+id/informationCallDuerer"
			android:layout_below="@id/informationDuerer"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="Sekretariat Haus Albertinum"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content"
			android:layout_below="@id/informationCallDuerer"
			android:layout_marginLeft="20dp"
			android:id="@+id/informationAlbertinum"
			android:layout_marginRight="20dp"/>

		<ImageButton
			android:layout_height="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="40dp"
			android:src="@drawable/ic_action_call"
			android:layout_marginLeft="20dp"
			android:id="@+id/informationCallAlbertinum"
			android:layout_below="@id/informationAlbertinum"/>

		<ImageButton
			android:layout_height="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="40dp"
			android:src="@drawable/ic_action_email"
			android:layout_toRightOf="@id/informationCallDuerer"
			android:id="@+id/informationMailDuerer"
			android:layout_below="@id/informationDuerer"/>

		<ImageButton
			android:layout_height="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="40dp"
			android:src="@drawable/ic_action_email"
			android:layout_toRightOf="@id/informationCallAlbertinum"
			android:id="@+id/informationMailAlbertinum"
			android:layout_below="@id/informationAlbertinum"/>

		<ImageButton
			android:layout_height="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="40dp"
			android:src="@drawable/ic_action_web_site"
			android:layout_toRightOf="@id/informationMailAlbertinum"
			android:id="@+id/informationWebAlbertinum"
			android:layout_below="@id/informationAlbertinum"
			android:layout_marginBottom="10dp"/>

		<ImageButton
			android:layout_height="40dp"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="40dp"
			android:src="@drawable/ic_action_web_site"
			android:id="@+id/informationWebDuerer"
			android:layout_toRightOf="@id/informationMailDuerer"
			android:layout_below="@id/informationDuerer"/>

	</RelativeLayout>

</HorizontalScrollView>

